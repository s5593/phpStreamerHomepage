body {
    background-color: #000;
    color: #eee;
    font-family: 'Noto Sans KR', sans-serif;
    margin: 0;
    padding: 0;
  }
  
  .form-card {
    background: #111;
    border-radius: 16px;
    max-width: 400px;
    margin: 100px auto;
    padding: 40px;
    box-shadow: 0 0 10px rgba(106, 13, 173, 0.6);
  }
  
  h2 {
    color: #fff;
    margin-bottom: 20px;
    text-align: center;
  }
  
  label {
    display: block;
    margin-top: 20px;
    font-size: 14px;
  }
  
  input {
    width: 100%;
    padding: 10px;
    background: #222;
    color: #fff;
    border: 1px solid #6a0dad;
    border-radius: 8px;
    margin-top: 6px;
  }
  
  button {
    width: 100%;
    padding: 12px;
    margin-top: 30px;
    background-color: #6a0dad;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    cursor: pointer;
  }
  
  button:hover {
    background-color: #7c1fdc;
  }
  
  .link-group {
    margin-top: 20px;
    text-align: center;
    font-size: 13px;
  }
  
  .action-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 30px;
    gap: 10px;
  }
  
  .auth-btn {
    flex: 1;
    display: inline-block;
    text-align: center;
    padding: 12px 16px;
    background: linear-gradient(135deg, #707070, #aaaaaa);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: bold;
    box-shadow: 0 4px 10px rgba(106, 13, 173, 0.3);
    transition: background 0.3s ease, transform 0.2s ease;
  }
  
  .auth-btn:hover {
    background: linear-gradient(135deg, #707070, #aaaaaa);
    transform: translateY(-2px);
  }